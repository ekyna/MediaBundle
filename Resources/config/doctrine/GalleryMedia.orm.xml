<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ekyna\Bundle\MediaBundle\Entity\GalleryMedia"
            table="media_gallery_media">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="position" type="integer" column="position">
            <gedmo:sortable-position />
        </field>

        <many-to-one target-entity="Ekyna\Bundle\MediaBundle\Entity\Gallery" inversed-by="medias" field="gallery" orphan-removal="true">
            <join-column name="gallery_id" referenced-column-name="id" nullable="true" on-delete="CASCADE" />
            <gedmo:sortable-group />
        </many-to-one>

    </entity>

</doctrine-mapping>
