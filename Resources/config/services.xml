<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ekyna_media.browser.thumbs_directory">cache/media/media_thumb</parameter>
        <parameter key="ekyna_media.video.directory">cache/video</parameter>

        <parameter key="ekyna_media.media_choice.form_type.class">Ekyna\Bundle\MediaBundle\Form\Type\MediaChoiceType</parameter>
        <parameter key="ekyna_media.media_collection.form_type.class">Ekyna\Bundle\MediaBundle\Form\Type\MediaCollectionType</parameter>
        <parameter key="ekyna_media.media_collection_media.form_type.class">Ekyna\Bundle\MediaBundle\Form\Type\MediaCollectionMediaType</parameter>
    </parameters>

    <services>

        <!-- Repositories -->
        <service id="ekyna_media.folder.repository"
                 class="Ekyna\Bundle\MediaBundle\Entity\FolderRepository">
            <factory service="doctrine" method="getRepository" />
            <argument>Ekyna\Bundle\MediaBundle\Entity\Folder</argument>
        </service>

        <!-- Form types -->
        <service id="ekyna_media.media_choice.form_type"
                 class="%ekyna_media.media_choice.form_type.class%">
            <argument type="service" id="ekyna_media.media.repository" />
            <tag name="form.type" />
            <tag name="form.js" selector=".ekyna-media-choice" path="ekyna-media/form/choice" />
        </service>
        <service id="ekyna_media.media_collection.form_type"
                 class="%ekyna_media.media_collection.form_type.class%">
            <tag name="form.type" />
            <tag name="form.js" selector=".ekyna-media-collection" path="ekyna-media/form/collection" />
        </service>
        <service id="ekyna_media.media_collection_media.form_type"
                 class="%ekyna_media.media_collection_media.form_type.class%">
            <tag name="form.type" />
        </service>
        <service id="ekyna_media.media_upload.form_type"
                 class="Ekyna\Bundle\MediaBundle\Form\Type\UploadType">
            <tag name="form.type" />
            <tag name="form.js" selector=".ekyna-media-upload" path="ekyna-media/form/upload" />
        </service>
        <service id="ekyna_media.media_upload_media.form_type"
                 class="Ekyna\Bundle\MediaBundle\Form\Type\UploadMediaType">
            <argument>%ekyna_media.media.class%</argument>
            <tag name="form.type" />
        </service>
        <service id="ekyna_media.media_import.form_type"
                 class="Ekyna\Bundle\MediaBundle\Form\Type\ImportMediaType">
            <argument>%ekyna_media.media.class%</argument>
            <tag name="form.type" />
        </service>

        <!-- Form flows types -->
        <service id="ekyna_media.import_media.form_flow"
                 class="Ekyna\Bundle\MediaBundle\Form\Type\MediaImportFlow"
                 parent="craue.form.flow">
            <argument id="router" type="service" />
        </service>
        <service id="ekyna_media.import_media.selection.form_type"
                 class="Ekyna\Bundle\MediaBundle\Form\Type\Step\MediaImportSelectionType">
            <argument id="oneup_flysystem.mount_manager" type="service" />
            <tag name="form.type" />
        </service>
        <service id="ekyna_media.import_media.creation.form_type"
                 class="Ekyna\Bundle\MediaBundle\Form\Type\Step\MediaImportCreationType">
            <argument id="ekyna_media.media.repository" type="service" />
            <tag name="form.type" />
        </service>

        <!-- Show types -->
        <service id="ekyna_cms.show.media_type"
                 class="Ekyna\Bundle\MediaBundle\Show\Type\MediaType">
            <tag name="ekyna_admin.show.type" alias="media"/>
        </service>
        <service id="ekyna_cms.show.medias_type"
                 class="Ekyna\Bundle\MediaBundle\Show\Type\MediasType">
            <tag name="ekyna_admin.show.type" alias="medias"/>
        </service>

        <!-- Uploader -->
        <service id="ekyna_media.media.uploader"
                 class="Ekyna\Bundle\CoreBundle\Uploader\Uploader">
            <argument type="service" id="oneup_flysystem.mount_manager" />
            <argument>local_media</argument><!-- TODO config -->
        </service>

        <!-- Doctrine subscribers/listeners -->
        <service id="ekyna_media.media.subject_subscriber"
                 class="Ekyna\Bundle\MediaBundle\Listener\MediaSubjectSubscriber"
                 public="false">
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>
        <service id="ekyna_media.media.gallery_subscriber"
                 class="Ekyna\Bundle\MediaBundle\Listener\GalleryMediaSubscriber"
                 public="false">
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>
        <service id="ekyna_media.media.listener"
                 class="Ekyna\Bundle\MediaBundle\Listener\MediaListener"
                 public="false">
            <argument type="service" id="ekyna_media.media.uploader" />
            <tag name="doctrine.orm.entity_listener" />
        </service>

        <!-- Twig extensions -->
        <service id="Ekyna\Bundle\MediaBundle\Twig\BrowserExtension" public="false">
            <argument type="service" id="ekyna_media.generator" />
            <argument type="service" id="Symfony\Component\Serializer\Normalizer\NormalizerInterface" />
            <argument type="service" id="Symfony\Component\HttpFoundation\Session\SessionInterface" />
            <tag name="twig.extension" />
        </service>
        <service id="Ekyna\Bundle\MediaBundle\Twig\PlayerExtension" public="false">
            <argument type="service" id="ekyna_media.generator" />
            <argument type="service" id="ekyna_media.renderer" />
            <tag name="twig.extension" />
        </service>

        <!-- Services -->
        <service id="ekyna_media.generator"
                 class="Ekyna\Bundle\MediaBundle\Service\Generator"
                 lazy="true">
            <argument type="service" id="local_media_filesystem" />
            <argument type="service" id="liip_imagine" />
            <argument type="service" id="liip_imagine.cache.manager" />
            <argument type="service" id="ekyna_media.video_manager" />
            <argument type="service" id="router" />
            <argument>%kernel.project_dir%/web</argument>
            <argument>%ekyna_media.browser.thumbs_directory%</argument>
        </service>
        <service id="ekyna_media.video_manager"
                 class="Ekyna\Bundle\MediaBundle\Service\VideoManager"
                 lazy="true">
            <argument type="service" id="local_media_filesystem" />
            <argument type="service" id="local_video_filesystem" />
            <argument type="service" id="dubture_ffmpeg.ffmpeg" />
            <argument type="service" id="dubture_ffmpeg.ffprobe" />
            <argument type="service" id="liip_imagine.cache.manager" />
            <argument type="service" id="router" />
            <argument>%ekyna_media.video.directory%</argument>
            <argument>%ekyna_media.watermark%</argument>
        </service>
        <service id="ekyna_media.renderer"
                 class="Ekyna\Bundle\MediaBundle\Service\Renderer"
                 lazy="true">
            <argument type="service" id="twig" />
            <argument type="service" id="ekyna_media.generator" />
            <argument type="service" id="ekyna_media.video_manager" />
            <argument type="service" id="liip_imagine.filter.manager" />
        </service>

        <!-- Normalizers -->
        <service id="ekyna_media.media.normalizer"
                 class="Ekyna\Bundle\MediaBundle\Service\Serializer\MediaNormalizer"
                 parent="ekyna_resource.serializer.resource_normalizer"
                 public="false">
            <call method="setGenerator">
                <argument type="service" id="ekyna_media.generator"/>
            </call>
            <tag name="serializer.normalizer"/>
            <!--<tag name="serializer.denormalizer"/>-->
        </service>
        <service id="ekyna_media.folder.normalizer"
                 class="Ekyna\Bundle\MediaBundle\Service\Serializer\FolderNormalizer"
                 public="false">
            <call method="setSerializer">
                <argument type="service" id="serializer"/>
            </call>
            <tag name="serializer.normalizer"/>
            <!--<tag name="serializer.denormalizer"/>-->
        </service>

        <!-- Schema.org provider -->
        <service id="ekyna_media.media.schema_provider"
                 class="Ekyna\Bundle\MediaBundle\Service\SchemaOrg\MediaProvider">
            <argument type="service" id="ekyna_media.generator"/>
            <tag name="ekyna_cms.schema_org_provider"/>
        </service>

        <!-- Validator -->
        <service id="ekyna_media.media.validator"
                 class="Ekyna\Bundle\MediaBundle\Validator\Constraints\MediaValidator">
            <argument type="service" id="oneup_flysystem.mount_manager" />
            <tag name="validator.constraint_validator" alias="ekyna_media_media" />
        </service>

    </services>

</container>
