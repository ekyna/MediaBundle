<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ekyna_media.upload_directory">%kernel.cache_dir%/upload</parameter>

        <parameter key="ekyna_media.file.form_type.class">Ekyna\Bundle\CoreBundle\Form\Type\FileType</parameter>
    </parameters>

    <services>

        <!-- Repositories -->
        <service id="ekyna_media.folder.repository"
                 class="Ekyna\Bundle\MediaBundle\Entity\FolderRepository"
                 factory-service="doctrine.orm.default_entity_manager"
                 factory-method="getRepository">
            <argument>Ekyna\Bundle\MediaBundle\Entity\Folder</argument>
        </service>

        <!-- Form types -->
        <service id="ekyna_media.file.form_type" class="%ekyna_media.file.form_type.class%">
            <argument>%ekyna_media.file.class%</argument>
            <argument>%ekyna_media.upload_directory%</argument>
            <tag name="form.type" alias="ekyna_media_file" />
        </service>

        <!-- Uploaders -->
        <service id="ekyna_media.uploader" abstract="true">
            <argument>%ekyna_media.upload_directory%</argument>
        </service>
        <service id="ekyna_media.image.uploader" class="Ekyna\Bundle\MediaBundle\Uploader\Uploader" parent="ekyna_media.uploader">
            <call method="setTargetFilesystem">
                <argument type="service">
                    <service class="Gaufrette\Filesystem"
                             factory-service="knp_gaufrette.filesystem_map"
                             factory-method="get">
                        <argument>local_image</argument>
                    </service>
                </argument>
            </call>
        </service>
        <service id="ekyna_media.file.uploader" class="Ekyna\Bundle\MediaBundle\Uploader\Uploader" parent="ekyna_media.uploader">
            <call method="setTargetFilesystem">
                <argument type="service">
                    <service class="Gaufrette\Filesystem"
                             factory-service="knp_gaufrette.filesystem_map"
                             factory-method="get">
                        <argument>local_file</argument>
                    </service>
                </argument>
            </call>
        </service>

        <!-- Imagine cache resolver -->
        <service id="ekyna_media.imagine.cache.resolver.web_path" class="Ekyna\Bundle\MediaBundle\Imagine\Cache\Resolver\WebPathResolver">
            <argument type="service" id="filesystem" />
            <argument>%assets_base_urls%</argument>
            <argument>%kernel.root_dir%/../web</argument>
            <argument>media/images</argument>
            <tag name="liip_imagine.cache.resolver" resolver="ekyna_web_path" />
        </service>

        <!-- Event listeners -->
        <service id="ekyna_media.image.event_subscriber" class="Ekyna\Bundle\MediaBundle\EventListener\ImageEventSubscriber">
            <argument type="service" id="ekyna_media.image.uploader" />
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="ekyna_media.file.event_subscriber" class="Ekyna\Bundle\MediaBundle\EventListener\FileEventSubscriber">
            <argument type="service" id="ekyna_media.file.uploader" />
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="ekyna_media.upload.event_subscriber" class="Ekyna\Bundle\MediaBundle\EventListener\UploadListener">
            <tag name="kernel.event_subscriber" />
        </service>

        <!-- Doctrine event listeners -->
        <service id="ekyna_media.image.listener" class="Ekyna\Bundle\MediaBundle\Listener\ImageListener" public="false">
            <argument type="service" id="ekyna_media.image.uploader" />
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>
        <service id="ekyna_media.file.listener" class="Ekyna\Bundle\MediaBundle\Listener\FileListener" public="false">
            <argument type="service" id="ekyna_media.file.uploader" />
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>

        <service id="ekyna_media.file.subject_subscriber" class="Ekyna\Bundle\MediaBundle\Listener\FileSubjectSubscriber" public="false">
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>
        <service id="ekyna_media.image.subject_subscriber" class="Ekyna\Bundle\MediaBundle\Listener\ImageSubjectSubscriber" public="false">
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>
        <service id="ekyna_media.gallery.subject_subscriber" class="Ekyna\Bundle\MediaBundle\Listener\GallerySubjectSubscriber" public="false">
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>

        <!-- Twig extensions -->
        <service id="ekyna_media.twig.media_extension" class="Ekyna\Bundle\MediaBundle\Twig\MediaExtension">
            <argument type="service" id="gaufrette.local_file_filesystem" />
            <argument type="service" id="router" />
            <argument type="service" id="ekyna_media.folder.repository" />
            <tag name="twig.extension" />
        </service>

    </services>

</container>
