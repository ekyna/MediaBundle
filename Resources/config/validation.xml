<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
    xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ekyna\Bundle\MediaBundle\Entity\Media">
        <constraint name="Ekyna\Bundle\CoreBundle\Validator\Constraints\Uploadable" />
        <constraint name="Ekyna\Bundle\MediaBundle\Validator\Constraints\Media" />
        <property name="file">
            <constraint name="File" />
        </property>
        <property name="folder">
            <constraint name="NotNull" />
        </property>
        <property name="translations">
            <constraint name="Valid" />
        </property>
    </class>

    <class name="Ekyna\Bundle\MediaBundle\Entity\MediaTranslation">
        <property name="locale">
            <constraint name="NotBlank" />
        </property>
        <property name="title">
            <constraint name="NotBlank" />
        </property>
    </class>

    <class name="Ekyna\Bundle\MediaBundle\Entity\Gallery">
        <property name="medias">
            <constraint name="Valid" />
        </property>
        <property name="translations">
            <constraint name="Valid" />
        </property>
    </class>

    <class name="Ekyna\Bundle\MediaBundle\Entity\GalleryTranslation">
        <property name="locale">
            <constraint name="NotBlank" />
        </property>
        <property name="title">
            <constraint name="NotBlank" />
        </property>
    </class>

    <class name="Ekyna\Bundle\MediaBundle\Entity\GalleryMedia">
        <property name="position">
            <constraint name="NotNull" />
            <constraint name="GreaterThanOrEqual">
	            <option name="value">0</option>
	        </constraint>
        </property>
        <property name="media">
            <constraint name="NotNull" />
            <constraint name="Valid" />
        </property>
    </class>

</constraint-mapping>