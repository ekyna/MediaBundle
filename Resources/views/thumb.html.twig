{% twig_js name="media_thumb_template" %}
{% spaceless %}
<div class="media-thumb" title="{{ media.title }}">
    <div class="thumb" data-role="select">
        <img src="{{ media is not sameas(null) ? media.thumb : '/bundles/ekynamedia/img/media-add.gif' }}">
    </div>
    <div class="controls">
        {% for c in controls -%}
        <a href="#" data-role="{{ c.role }}" class="glyphicon glyphicon-{{ c.icon }}"></a>
        {% endfor %}
    </div>
    {% if media is not sameas(null) -%}
    <div class="name" data-role="select">{{ media.filename }}</div>
    {%- endif %}
</div>
{% endspaceless %}