{% apply spaceless %}
<div id="media-browser" data-config="{{ config|json_encode }}">
    <div class="media-browser-controls">
        {# --- CREATE --- #}
        <div class="media-browser-controls-group">
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-default" data-role="create" title="Upload">
                    <span class="fa fa-plus"></span>
                </button>
                {# TODO (broken) <button type="button" class="btn btn-sm btn-default" data-role="import" title="Import">
                    <span class="fa fa-cloud-download"></span>
                </button>#}
            </div>
        </div>
        {# --- TEXT SEARCH --- #}
        <div class="media-browser-controls-group">
            <div class="input-group" style="max-width: 200px;">
                <input type="text" name="search" class="form-control input-sm"
                       data-role="search" placeholder="Rechercher" title="Search">
                    <span class="input-group-btn">
                        <button class="btn btn-sm btn-default" type="button"
                                data-role="clear-search" title="Clear search">
                            <span class="fa fa-remove"></span>
                        </button>
                    </span>
            </div>
        </div>
        {# --- DISPLAY MODE --- #}
        {#<div class="media-browser-controls-group">
            <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-sm btn-default">
                   <input type="radio" name="options" id="option1">
                   <span class="glyphicon glyphicon-th-large"></span>
                </label>
                <label class="btn btn-sm btn-default">
                   <input type="radio" name="options" id="option1">
                   <span class="glyphicon glyphicon-align-justify"></span>
                </label>
            </div>
        </div>#}
        {# --- TYPE FILTER --- #} {# TODO foreach MediaTypes #}
        {% if (config.types is not defined) or (config.types is empty) %}
            <div class="media-browser-controls-group">
                <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-sm btn-default" data-role="filter" title="Filter file">
                        <input type="checkbox" name="filters[]" value="file">
                        <span class="fa fa-file"></span>
                    </label>
                    <label class="btn btn-sm btn-default" data-role="filter" title="Filter image">
                        <input type="checkbox" name="filters[]" value="image">
                        <span class="fa fa-picture-o"></span>
                    </label>
                    <label class="btn btn-sm btn-default" data-role="filter" title="Filter SVG">
                        <input type="checkbox" name="filters[]" value="svg">
                        <span class="fa fa-object-ungroup"></span>
                    </label>
                    <label class="btn btn-sm btn-default" data-role="filter" title="Filter video">
                        <input type="checkbox" name="filters[]" value="video">
                        <span class="fa fa-film"></span>
                    </label>
                    <label class="btn btn-sm btn-default" data-role="filter" title="Filter flash">
                        <input type="checkbox" name="filters[]" value="flash">
                        <span class="fa fa-flash"></span>
                    </label>
                    <label class="btn btn-sm btn-default" data-role="filter" title="Filter audio">
                        <input type="checkbox" name="filters[]" value="audio">
                        <span class="fa fa-music"></span>
                    </label>
                    <label class="btn btn-sm btn-default" data-role="filter" title="Filter archive">
                        <input type="checkbox" name="filters[]" value="archive">
                        <span class="fa fa-compress"></span>
                    </label>
                </div>
            </div>
        {% endif %}
        {# --- SORTING --- #}
        <div class="media-browser-controls-group">
            <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-sm btn-default active" data-role="sort" title="Sort by names">
                    <input type="radio" id="sort-by-filename" name="sort" value="filename" data-dir="asc" checked="checked">
                    {#<span class="fa fa-sort-alpha-asc"></span>#}
                    <span class="glyphicon glyphicon-sort-by-alphabet"></span>
                </label>
                <label class="btn btn-sm btn-default" data-role="sort" title="Sort by size">
                    <input type="radio" id="sort-by-size" name="sort" value="size" data-dir="asc">
                    {#<span class="fa fa-sort-amount-asc"></span>#}
                    <span class="glyphicon glyphicon-sort-by-attributes"></span>
                </label>
            </div>
        </div>
        {# --- REFRESH --- #}
        <div class="media-browser-controls-group">
            <button class="btn btn-sm btn-default" type="button" data-role="refresh" title="Refresh">
                <span class="fa fa-refresh"></span>
            </button>
        </div>
    </div>
    <div class="media-browser-side">
        <div class="media-browser-tree"></div>
    </div>
    <div class="media-browser-main">
        <div class="media-browser-flash"></div>
        <div class="media-browser-content"></div>
    </div>
</div>
{% endapply %}
