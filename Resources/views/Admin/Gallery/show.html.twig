{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
    <h1>{{ 'ekyna_media.gallery.header.show'|trans|raw }}</h1>
{% endblock %}

{% block actions %}
    {{ admin_resource_btn(gallery, 'list') }}
    {{ admin_resource_btn(gallery, 'new') }}
{% endblock %}

{% block main %}
    <div class="actions">
        {{ admin_resource_btn(gallery, 'edit') }}
        {{ admin_resource_btn(gallery, 'remove') }}
    </div>
    <div class="show show-with-tabs">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#media-gallery-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
        </ul>
        <div class="show-body">
            <div class="tab-content">
                <div class="tab-pane active" id="media-gallery-general">
                    <div class="row">
                        {#<div class="col-md-6">
                            {{ show_row(gallery, 'image', 'ekyna_core.field.image', {'label_nb_col': 4}) }}
                        </div>#}
                        <div class="col-md-6">
                            {{ show_row(gallery.path, 'text', 'ekyna_core.field.path', {'label_nb_col': 4}) }}
                            {{ show_row(gallery.alt, 'text', 'ekyna_core.field.alt', {'label_nb_col': 4}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}